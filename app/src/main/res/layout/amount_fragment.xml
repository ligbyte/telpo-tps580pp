<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_radius_8_bg_ffffff"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="@drawable/shape_radius_8_bg_ffffff"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textSize="40sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textSize="40dp"
                    android:textColor="@color/black"
                    android:hint="请输入消费金额"
                    android:textColorHint="@color/color_e7e7e7"
                    android:layout_marginLeft="20dp"
                    />
                <ImageView
                    android:id="@+id/ivClearAmount"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@mipmap/ic_money_clear"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="24dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:gravity="center_vertical"
                android:background="@drawable/shape_radius_top_8_bg_c7e3ff"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="用户"
                    android:textColor="@color/text_3"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="金额"
                    android:textColor="@color/text_3"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="状态"
                    android:textColor="@color/text_3"
                    android:textSize="20sp"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvConsume"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                tools:listitem="@layout/item_main_pay"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:orientation="horizontal"
                android:background="@drawable/shape_radius_10_bg_0087fa"
                android:gravity="center"
                android:visibility="gone"
                android:layout_margin="16dp"

                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/ic_money"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退最后一笔"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="3dp"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_radius_8_bg_e3ebf7"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginLeft="24dp"
            android:padding="16dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tvText1"
                    android:layout_width="160dp"
                    android:layout_height="135dp"
                    android:gravity="center"
                    android:text="1"
                    android:clickable="true"
                    android:textColor="@color/black"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:background="@drawable/selector_button_press"
                    />
                <TextView
                    android:id="@+id/tvText2"
                    android:layout_width="160dp"
                    android:layout_height="135dp"
                    android:gravity="center"
                    android:text="2"
                    android:clickable="true"
                    android:textColor="@color/black"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/selector_button_press"
                    />
                <TextView
                    android:id="@+id/tvText3"
                    android:layout_width="160dp"
                    android:layout_height="135dp"
                    android:gravity="center"
                    android:text="3"
                    android:clickable="true"
                    android:textColor="@color/black"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/selector_button_press"
                    />
                <LinearLayout
                    android:id="@+id/llDelete"
                    android:layout_width="187dp"
                    android:layout_height="135dp"
                    android:gravity="center"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/selector_button_press"
                    android:clickable="true"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="34dp"
                        android:src="@mipmap/ic_edit_delete"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvText4"
                            android:layout_width="160dp"
                            android:layout_height="135dp"
                            android:gravity="center"
                            android:text="4"
                            android:textColor="@color/black"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            android:background="@drawable/selector_button_press"
                            android:clickable="true"
                            />
                        <TextView
                            android:id="@+id/tvText5"
                            android:layout_width="160dp"
                            android:layout_height="135dp"
                            android:gravity="center"
                            android:text="5"
                            android:textColor="@color/black"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="16dp"
                            android:background="@drawable/selector_button_press"
                            android:clickable="true"
                            />
                        <TextView
                            android:id="@+id/tvText6"
                            android:layout_width="160dp"
                            android:layout_height="135dp"
                            android:gravity="center"
                            android:text="6"
                            android:textColor="@color/black"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="16dp"
                            android:background="@drawable/selector_button_press"
                            android:clickable="true"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvText7"
                            android:layout_width="160dp"
                            android:layout_height="135dp"
                            android:gravity="center"
                            android:text="7"
                            android:textColor="@color/black"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            android:background="@drawable/selector_button_press"
                            android:clickable="true"
                            />
                        <TextView
                            android:id="@+id/tvText8"
                            android:layout_width="160dp"
                            android:layout_height="135dp"
                            android:gravity="center"
                            android:text="8"
                            android:textColor="@color/black"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="16dp"
                            android:background="@drawable/selector_button_press"
                            android:clickable="true"
                            />
                        <TextView
                            android:id="@+id/tvText9"
                            android:layout_width="160dp"
                            android:layout_height="135dp"
                            android:gravity="center"
                            android:text="9"
                            android:textColor="@color/black"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="16dp"
                            android:background="@drawable/selector_button_press"
                            android:clickable="true"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llPlus"
                    android:layout_width="187dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/selector_button_press"
                    android:clickable="true"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"

                        android:textSize="52sp"
                        android:textColor="#3489F5"
                        android:textStyle="bold"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tvText0"
                    android:layout_width="160dp"
                    android:layout_height="135dp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:background="@drawable/selector_button_press"
                    android:clickable="true"
                    />
                <TextView
                    android:id="@+id/tvPoint"
                    android:layout_width="160dp"
                    android:layout_height="135dp"
                    android:gravity="center"
                    android:text="."
                    android:textColor="@color/black"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/selector_button_press"
                    android:clickable="true"
                    />

                <LinearLayout
                    android:id="@+id/llConfirm"
                    android:layout_width="358dp"
                    android:layout_height="135dp"
                    android:gravity="center"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/selector_button_press_0087fa"
                    android:clickable="true"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvConfirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="结算"
                        android:textSize="32sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>