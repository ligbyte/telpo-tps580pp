<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <!--金额模式-->
        <LinearLayout
            android:id="@+id/llDefault"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:layout_gravity="center"
                    android:text="当前订单"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="60sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:id="@+id/fl_amount"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ScrollView
                        android:id="@+id/svAmount"
                        android:layout_width="match_parent"
                        android:scrollbars="none"
                        android:background="@color/transparent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tvAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="100dp"
                            android:background="@color/transparent"
                            android:gravity="center_horizontal"
                            android:paddingBottom="100dp"
                            android:hint="0.00"
                            android:textColor="#00DC82"
                            android:textColorHint="#00DC82"
                            android:textSize="180sp" />
                    </ScrollView>

                    <TextView
                        android:id="@+id/tvFixAmountModeMoney"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="#00DC82"
                        android:textColorHint="#00DC82"
                        android:textSize="150sp"
                        android:visibility="gone"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingRight="30dp"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvFixAmountModeStatus"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="定额模式"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginRight="30dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:background="@drawable/bg_select_checkbox_selected"
                    android:textColor="#00dc82"
                    android:textSize="40sp"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="122dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@mipmap/icon_amount_button">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="取消支付"
                        android:textColor="#00DC82"
                        android:textSize="36sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="按清除键"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@mipmap/icon_amount_button">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="修改金额"
                        android:textColor="#00DC82"
                        android:textSize="36sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="按清除键"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@mipmap/icon_amount_button">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="退款"
                        android:textColor="#00DC82"
                        android:textSize="36sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="按功能键"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@mipmap/icon_amount_button">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="销售统计"
                        android:textColor="#00DC82"
                        android:textSize="36sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="按查询键"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </RelativeLayout>
                <!--<ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_amount_cancel" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_amount_modify" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_amount_refund" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_amount_statistic" />-->


            </LinearLayout>

        </LinearLayout>

        <!--退款页面-->
        <LinearLayout
            android:id="@+id/llRefundList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="姓名："
                    android:textColor="@color/white"
                    android:textSize="45sp" />

                <TextView
                    android:id="@+id/tvNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="账号/卡号："
                    android:textColor="@color/white"
                    android:textSize="45sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="面容ID:"
                    android:textColor="@color/white"
                    android:textSize="45sp" />

                <FrameLayout
                    android:layout_width="106dp"
                    android:layout_height="106dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp">

                    <ImageView
                        android:id="@+id/ivHeader"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_circle_bg_fff"
                        android:src="@mipmap/icon_camerapreview_person" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/icon_camerapreview_person_1" />


                </FrameLayout>


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRefund"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="2"
                tools:listitem="@layout/item_refund_bill" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="请点击键盘 上翻、下翻"
                    android:textColor="#00DC82"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:src="@mipmap/icon_up" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:src="@mipmap/icon_down" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text=" 键选择订单  确认键退款，清除键返回"
                    android:textColor="#00DC82"
                    android:textSize="30sp" />


            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlRefundConfirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#6e4F4D4D"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="750dp"
                android:layout_height="400dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:background="@drawable/shape_radius_10_bg_0b1227"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvRefundName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="1"
                        android:lineSpacingExtra="5.2sp"
                        android:text="是否为"
                        android:textColor="#FFFFFF"
                        android:textSize="56sp" />

                    <TextView
                        android:id="@+id/tvRefundName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="1"
                        android:lineSpacingExtra="5.2sp"
                        android:textColor="#00DC82"
                        android:textSize="56sp"
                        tools:text="张志诚" />

                    <TextView
                        android:id="@+id/tvRefundName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="1"
                        android:lineSpacingExtra="5.2sp"
                        android:text="进行该笔退款？"
                        android:textColor="#FFFFFF"
                        android:textSize="56sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llSureCancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="46dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="1"
                        android:lineSpacingExtra="5.2sp"
                        android:text="是请按"
                        android:textColor="#FFFFFF"
                        android:textSize="48sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="1"
                        android:lineSpacingExtra="5.2sp"
                        android:text="确认"
                        android:textColor="#00DC82"
                        android:textSize="48sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="1"
                        android:lineSpacingExtra="5.2sp"
                        android:text="键，否请按"
                        android:textColor="#FFFFFF"
                        android:textSize="48sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="1"
                        android:lineSpacingExtra="5.2sp"
                        android:text="清除"
                        android:textColor="#00DC82"
                        android:textSize="48sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="1"
                        android:lineSpacingExtra="5.2sp"
                        android:text="键"
                        android:textColor="#FFFFFF"
                        android:textSize="48sp" />
                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

        <!--人脸选择-->
        <FrameLayout
            android:id="@+id/fl_face_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CC000000"
            android:visibility="gone"
            android:elevation="@dimen/size_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/bg_tips"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_face_choose_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="系统检测到有相似人脸，请选择"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="35sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvFaceChoose"
                        android:layout_width="wrap_content"
                        android:layout_height="400dp"
                        android:layout_centerHorizontal="true"
                        android:paddingLeft="50dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_face_choose" />


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_face_choose_tips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="1"
                        android:lineSpacingExtra="5.2sp"
                        android:text="点击键盘[上翻][下翻]选择内容，确认键下一步，清除键返回"
                        android:textColor="#00DC82"
                        android:textSize="20px" />

                </LinearLayout>


            </LinearLayout>



        </FrameLayout>

        <RelativeLayout
            android:id="@+id/rlPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_main1_bg"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:padding="50dp"
                android:gravity="center"
                android:background="@null"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_offline_sync_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请输入您的数字密码"
                    android:textColor="#FFFFFF"
                    android:textSize="40sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_input_pwd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:minHeight="100dp"
                        android:minWidth="700dp"
                        android:inputType="textPassword"
                        android:alpha="1"
                        android:lineSpacingExtra="5.2sp"
                        android:background="@drawable/selector_reset_et"
                        android:textColor="#FFFFFF"
                        android:textSize="50sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/llCancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="106dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_rest_pwd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:background="@drawable/selector_bg_button"
                        android:text="重置密码"
                        android:textColor="@color/white"
                        android:textSize="40sp" />

                </RelativeLayout>


            </LinearLayout>


            <TextView
                android:id="@+id/tv_offline_sync_tips2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:text="请点击键盘[上翻][下翻]选择内容，确认键下一步，清除键返回"
                android:textColor="#00DC82"
                android:textSize="30sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlResetPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_main1_bg"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:padding="20dp"
                android:gravity="center_horizontal"
                android:background="@null"
                android:orientation="vertical">
                    <!-- 手机号信息 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="13dp">

                        <TextView
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:text="手机号:"
                            android:gravity="right"
                            android:textSize="40sp"
                            android:padding="20dp"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/tv_manager_tel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="700dp"
                            android:background="@drawable/selector_reset_et"
                            android:text=""
                            android:textSize="40sp"
                            android:padding="15dp"
                            android:textColor="@color/gray_hint"/>

                    </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="40sp"
                    android:paddingLeft="300dp"
                    android:text="该号码为餐厅负责人号码，不可修改"
                    android:textColor="@color/gray_hint"/>

                    <!-- 验证码输入区域 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="13dp">

                        <TextView
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:text="验证码:"
                            android:gravity="right"
                            android:textSize="40sp"
                            android:padding="20dp"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/tv_verify_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="350dp"
                            android:background="@drawable/selector_reset_et"
                            android:hint="@string/verification_code_hint"
                            android:textSize="40sp"
                            android:padding="15dp"
                            android:textColorHint="@color/gray_hint"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/tv_get_verify_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:minWidth="330dp"
                            android:gravity="center"
                            android:background="@drawable/selector_bg_button_ok"
                            android:text="@string/get_verification_code"
                            android:textSize="40sp"
                            android:padding="15dp"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <!-- 密码输入 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="13dp">

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:text="锁屏密码:"
                        android:gravity="right"
                        android:textSize="40sp"

                        android:padding="20dp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/tv_reset_pd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="700dp"
                        android:background="@drawable/selector_reset_et"
                        android:inputType="textPassword"
                        android:hint="@string/password_hint"
                        android:textSize="40sp"
                        android:padding="15dp"
                        android:textColorHint="@color/gray_hint"
                        android:textColor="@color/white"/>

                </LinearLayout>

                    <!-- 操作按钮 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:spacing="80dp">

                        <TextView
                            android:id="@+id/tv_rest_pwd_ok"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:paddingLeft="60dp"
                            android:paddingRight="60dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:background="@drawable/selector_bg_button_ok"
                            android:text="确定"
                            android:textColor="@color/white"
                            android:textSize="40sp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:text=" "
                            android:textColor="@color/white"
                            android:textSize="40sp" />

