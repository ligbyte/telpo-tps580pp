<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="440dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_radius_8_bg_ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="24dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="版本更新"
                android:textColor="@color/text_3"
                android:textSize="24sp" />

        </RelativeLayout>
        <TextView
            android:id="@+id/tvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="确定要重新启动该软件吗？\n确定要重新启动该软件吗？\n确定要重新启动该软件吗？"
            android:textSize="20sp"
            android:textColor="@color/text_3"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="168dp"
                android:layout_height="48dp"
                android:background="@drawable/shape_radius_8_bg_f1f2f4"
                android:text="取消"
                android:textColor="@color/color_171717"
                android:textSize="16sp"

                android:gravity="center"/>
            <TextView
                android:id="@+id/tvConfirm"
                android:layout_width="168dp"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/shape_radius_10_bg_0087fa"
                android:text="更新"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</layout>