<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/ic_meal_type"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前餐别："
                    android:textSize="16sp"
                    android:textColor="@color/text_3"
                    android:layout_marginLeft="8dp"/>
                <TextView
                    android:id="@+id/tvFeeType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂无"
                    android:textSize="16sp"
                    android:textColor="@color/text_3"
                   />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/ic_meal_time"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="供应时间："
                    android:textSize="16sp"
                    android:textColor="@color/text_3"
                    android:layout_marginLeft="8dp"/>
                <TextView
                    android:id="@+id/tvStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂无时段设置"
                    android:textSize="16sp"
                    android:textColor="@color/text_3"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/ic_meal_end_time"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="截止订餐时间："
                    android:textSize="16sp"
                    android:textColor="@color/text_3"
                    android:layout_marginLeft="8dp"/>
                <TextView
                    android:id="@+id/tvEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未设置截止时间"
                    android:textSize="16sp"
                    android:textColor="@color/text_3"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/ic_meal_person_count"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订餐人数："
                    android:textSize="16sp"
                    android:textColor="@color/text_3"
                    android:layout_marginLeft="8dp"/>
                <TextView
                    android:id="@+id/tvTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="16sp"
                    android:textColor="@color/text_3"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/ic_meal_pick_count"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已取餐人数："
                    android:textSize="16sp"
                    android:textColor="@color/text_3"
                    android:layout_marginLeft="8dp"/>
                <TextView
                    android:id="@+id/tvTakeMeal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="16sp"
                    android:textColor="@color/text_3"
                    />
            </LinearLayout>
        </LinearLayout>
<!--        <com.scwang.smart.refresh.layout.SmartRefreshLayout-->
<!--            android:id="@+id/srlMealList"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent">-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMealList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="24dp"
                tools:itemCount="5"
                tools:listitem="@layout/item_meal_person" />
            <ImageView
                android:id="@+id/ivListEmpty"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:src="@mipmap/ic_list_empty"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>



<!--        </com.scwang.smart.refresh.layout.SmartRefreshLayout>-->
    </LinearLayout>
</layout>